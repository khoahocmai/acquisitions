{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch with Nodemon",
      "runtimeExecutable": "nodemon",
      "runtimeArgs": [
        "--inspect",
        "${workspaceFolder}/src/index.js"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/index.js",
      "restart": true,
      "console": "integratedTerminal"
    }
  ]
}